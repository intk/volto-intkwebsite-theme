/*******************************
      INTK Theme Variables
*******************************/

@bodyFontSmoothing: antialiased;

/*-------------------
       Fonts
--------------------*/
@fontName: "Lato";
@secondaryFontName: "Montserrat";
@googleFontSizes: '300,400';
@googleSecondaryFontSizes: '400';
@headingsFont: @secondaryFontName, 'Helvetica Neue', Arial, Helvetica, sans-serif;
@googleFontRequest: '@{fontName}:@{googleFontSizes}|@{secondaryFontName}:@{googleSecondaryFontSizes}';

@normal: 300;
@medium: 400;
@bold: 700;

/*-------------------
      Site Colors
--------------------*/
@black: #242424;
@gray: #999999;
@darkgray: #666666;
@lightgray: #cccccc;

/*-------------------
      Base Sizes
--------------------*/
@emSize: 16px;
@fontSize: 16px;
@uiHeaderSize: 1.28571429em;

/*-------------------
      Body text
--------------------*/
@textSize: 20px;
@textLineHeight: 1.5;
@htmlBlockMarginBottom: 0px;
@contentDisplayTitleDescription: none;

/*-------------------
    Brand Colors
--------------------*/
@primaryColor: @black;
@secondaryColor: @gray;

/*-------------------
        Page
--------------------*/
@textColor: @gray;
@contentCoreMarginTop: 35px;

/*--------------
  Page Heading
---------------*/
@headingsFontColor: @black;
@headingsFontWeight: @bold;
@headingsLineHeight: 1.1;
@headingsTextTransform: uppercase;
@h2: 22px;
@h3: 20px;
@h4: 18px;
@h5: 15px;
@h6: 12px;

/*-------------------
       Links
--------------------*/
@linkColor: @primaryColor;
@linkUnderline: none;
@linkHoverColor: @primaryColor;
@linkBorderBottomSize: 1px;
@linkHoverBorderBottomSize: 0px;
@linkBorderBottom: @linkBorderBottomSize solid @lightgray;
@linkHoverBorderBottom: @linkHoverBorderBottomSize solid @lightgray;
@linkHoverUnderline: underline;

/*-------------------
      Blockquote
--------------------*/
@blockquoteColor: @darkgray;
@blockquoteMargin: 0 auto;
@blockquoteFontWeight: @normal;
@blockquoteFontSize: 30px;
@blockquoteWidth: auto;
@blockquoteBackground: none;
@blockquoteLineHeight: 45px;
@blockquoteBorderLeft: 2px solid @lightgray;
@blockquotePaddingLeft: 20px;
@blockquotePaddingRight: 20px;
@blockquotePaddingTop: 0px;
@blockquotePaddingBottom: 5px;
@blockquoteMarginBottom: 28px;
@blockquoteFloat: none;
@blockquoteLetterSpacing: 0.05em;

/*-------------------
      Lead image
--------------------*/
@fullWidthImgRight: 0;
@fullWidthImgLeft: 50%;
@fullWidthImgTransform: translateX(-50%);
@fullWidthImgWidth: 80vw;
@fullWidthImgMarginLeft: 0px;
@fullWidthImgMarginRight: 0px;
@fullWidthImgMaxWidth: 960px;

@editFullWidthImgRight: 0;
@editFullWidthImgLeft: 0;
@editFullWidthImgWidth: 100vw;
@editFullWidthImgMarginLeft: 0px;
@editFullWidthImgMarginRight: 0px;
@editFullWidthImgMaxWidth: 960px;

/*-------------------
      Carousel
--------------------*/
@slideOverlayOpacity: 0;
@sliderArrowBottom: 15px;
@sliderArrowLeft: 15px;
@sliderHeightMobile: 450px;
